model User {
  id             String    @id @default(uuid())
  name           String
  email          String    @unique
  nim            String    @unique
  prodi          String
  image          String?
  email_verified Boolean   @default(false)
  role           String?   @default("user")
  password       String
  banned         Boolean?  @default(false)
  ban_reason     String?
  ban_expires    DateTime?
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt

  sessions Session[]
  accounts Account[]

  @@map("users")
}
