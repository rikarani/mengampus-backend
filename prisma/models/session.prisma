model Session {
  id         String   @id
  user_id    String
  token      String
  ip_address String?  @db.Text
  user_agent String?  @db.Text
  expires_at DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([user_id(length: 191)])
  @@map("sessions")
}
